<UserControl x:Class="DM_Skills.Views.sog_pa_tider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Scripts="clr-namespace:DM_Skills.Scripts"
             xmlns:Controls="clr-namespace:DM_Skills.Controls"
             xmlns:Models="clr-namespace:DM_Skills.Models"
             mc:Ignorable="d" 
             x:Name="Controller"
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.Resources>
        <Scripts:EnumItemsSource
            x:Key="OrderItemsSource"
            Type="{x:Type Scripts:Order}"/>
    </UserControl.Resources>

    <Grid Grid.Row="0" Margin="0" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            x:Name="search_menu"
            Loaded="Grid_Loaded" Grid.RowSpan="2" Panel.ZIndex="200" 
              Background="{StaticResource Color_Background_Program}" 
              VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Controls:PlaceholderBox 
            x:Name="txtSchoolName" 
            Grid.Row="0" Grid.Column="0" Margin="0"
            Placeholder="Skolens navn...."/>

            <Controls:PlaceholderBox 
                x:Name="txtDeltager" 
                Grid.Row="0" Grid.Column="2" Margin="0"
                Placeholder="Deltagers navn...."/>

            <DatePicker 
                x:Name="dtFrom"
                Grid.Row="0" Grid.Column="4" Margin="0"
                Style="{StaticResource DatePicker_Style_Default}" 
                ToolTip="Dato..."/>

            <DatePicker 
                x:Name="dtTo"
                Grid.Row="2" Grid.Column="4" Margin="0"
                Style="{StaticResource DatePicker_Style_Default}"
                ToolTip="Dato..."/>

            <ComboBox 
            Grid.Row="2" Grid.Column="0" Margin="0"
                ItemsSource="{StaticResource OrderItemsSource}"
                SelectedIndex="0" 
                SelectedItem="{Binding ElementName=Controller, Path=Order, Converter={StaticResource OrderItemsSource}}"
                >

                <!--<ComboBoxItem IsSelected="True">Nyeste tider</ComboBoxItem>
                <ComboBoxItem>Hurtigste tider</ComboBoxItem>
                <ComboBoxItem>Alfabetisk rækkefølge</ComboBoxItem>-->

            </ComboBox>

            <ComboBox 
                x:Name="cbLocation" SelectedIndex="0"
                ItemsSource="{Binding ElementName=Controller, Path=Locations}"
                Grid.Row="2" Grid.Column="2" Margin="0" >

                <!--<ComboBoxItem IsSelected="True">Vælg lokation</ComboBoxItem>
                <ComboBoxItem>Ballerup</ComboBoxItem>
                <ComboBoxItem>Hvidovre</ComboBoxItem>-->

            </ComboBox>

            <Button Grid.Row="4" Grid.Column="4" 
                Content="Søg"  x:Name="btnS"
                Margin="0"
                Height="{Binding ElementName=txtSchoolName, Path=ActualHeight}"
                Foreground="{StaticResource Color_Foreground_Light_1}" 
                Background="{StaticResource Color_Background_Button_Blue}" 
                Style="{StaticResource Button_Style_Default}"
                HorizontalAlignment="Stretch" Click="Button_Search_Click" />

            <Button Grid.Row="4" Grid.Column="0" 
                Content="Udskriv"  
                Margin="0"
                Width="{Binding ElementName=btnS, Path=ActualWidth}"
                Height="{Binding ElementName=txtSchoolName, Path=ActualHeight}"
                Foreground="{StaticResource Color_Foreground_Light_1}" 
                Background="{StaticResource Color_Background_Button_Blue}" 
                Style="{StaticResource Button_Style_Default}"
                HorizontalAlignment="Left" Click="Button_Print_Click" VerticalAlignment="Stretch" />
            
            
            <Grid Grid.Row="6" Grid.ColumnSpan="5" Margin="5 0">
                <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Transparent" Offset="1"/>
                    <GradientStop Color="#407F7F7F" Offset="0.95"/>
                    <GradientStop Color="#7F7F7F" Offset="0.717"/>
                    <GradientStop Color="#7F7F7F"/>
                </RadialGradientBrush>
            </Grid.Background>
            </Grid>


            <!--Header-->
            <Border 
                x:Name="header" Grid.Row="8" Grid.ColumnSpan="5" 
                BorderBrush="Gray"
                BorderThickness="0 0 0 2"
                Height="40" Background="LightGray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" SharedSizeGroup="Size_Checkbox"/>
                        <ColumnDefinition Width="188" SharedSizeGroup="Size_Person"/>
                        <ColumnDefinition Width="188" SharedSizeGroup="Size_School"/>
                        <ColumnDefinition Width="115" SharedSizeGroup="Size_Location"/>
                        <ColumnDefinition Width="100" SharedSizeGroup="Size_Date"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox 
                    Grid.Column="0"
                    x:Name="printCheckAll" 
                    Style="{StaticResource CheckBox_Style_Default}" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Unchecked="SearchList_CheckAll" 
                    Checked="SearchList_CheckAll" />

                    <TextBlock Text="Deltagere"       Foreground="{StaticResource Color_Foreground_Dark_2}"   Grid.Column="1" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="Skole og klasse" Foreground="{StaticResource Color_Foreground_Dark_2}"   Grid.Column="2" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="Lokation"        Foreground="{StaticResource Color_Foreground_Dark_2}"   Grid.Column="3" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="Dato"            Foreground="{StaticResource Color_Foreground_Dark_2}"   Grid.Column="4" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="Tid"             Foreground="{StaticResource Color_Foreground_Dark_2}"   Grid.Column="5" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                </Grid>
            </Border>
        </Grid>
            

        <ListView 
            x:Name="searchList"
            Padding="0"
            SelectionMode="Multiple"
            SelectionChanged="SearchList_SelectionChanged"
            Margin="{Binding ElementName=search_menu,Path=ActualHeight, Converter={StaticResource ValueToThicknessConvert}, ConverterParameter='0 100 0 0'}"
            ItemsSource="{Binding ElementName=Controller, Path=ItemSourceSearch}" 
            Visibility="Visible" FontSize="16"
            AlternationCount="2" BorderThickness="0" 
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.CanContentScroll="False"
            
            BorderBrush="{StaticResource Color_Border_InputBox}">

            <ListView.Template>
                <ControlTemplate  TargetType="ListView">
                    <!--<ItemsPresenter/>-->
                        <ItemsPresenter/>
                </ControlTemplate>
            </ListView.Template>
            
            
            <ListView.ItemContainerStyle>
                <Style  TargetType="ListViewItem">
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Red"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Blue"/>
                    </Style.Resources>

                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Foreground" Value="{StaticResource Color_Foreground_Dark_2}"/>
                    <!--<Setter Property="Template" Value="{StaticResource ListViewItem_Template_RemoveHighlight}"/>-->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Background="{TemplateBinding Background}" Padding="0 5">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Background" Value="{x:Null}" />
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{x:Null}" />
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                        </Trigger>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter Property="Background" Value="White"/>
                        </Trigger>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{x:Null}" />
                        </Trigger>
                    </Style.Triggers>      
                </Style>
            </ListView.ItemContainerStyle>
            
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="Size_Checkbox"/>
                            <ColumnDefinition SharedSizeGroup="Size_Person"/>
                            <ColumnDefinition SharedSizeGroup="Size_School"/>
                            <ColumnDefinition SharedSizeGroup="Size_Location"/>
                            <ColumnDefinition SharedSizeGroup="Size_Date"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <CheckBox 
                            IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListViewItem},AncestorLevel=1}}"
                            Style="{StaticResource CheckBox_Style_Default}" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="0" Content="" Grid.Column="0" />

                        <ListView 
                                Grid.Column="1"
                                ItemsSource="{Binding Persons}" 
                                BorderThickness="0" 
                                Background="Transparent"
                                VerticalAlignment="Center"
                                IsHitTestVisible="False">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <TextBlock Text="{Binding Name}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>


                        <StackPanel Grid.Column="2"  VerticalAlignment="Center">
                            <TextBlock Text="{Binding Path=School.Name}"/>
                            <TextBlock Text="{Binding Path=Team.Class}"/>
                        </StackPanel>

                        <TextBlock Text="{Binding Path=Location.Name}" Grid.Column="3" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Path=Team.Date}" Grid.Column="4" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Path=Team.Time}" Grid.Column="5" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
        


