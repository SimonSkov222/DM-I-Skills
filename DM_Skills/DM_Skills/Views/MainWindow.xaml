<!-- Viser layout for tidtagning -->
<Window x:Class="DM_Skills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DM_Skills"
        xmlns:Controls="clr-namespace:DM_Skills.Controls"
        xmlns:Models="clr-namespace:DM_Skills.Models"
        xmlns:View="clr-namespace:DM_Skills.Views"
		xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        FontFamily="Calibri"
        Background="{StaticResource Color_Background_Program}"
        Foreground="{StaticResource Color_Foreground_Program}"
        
        Title="MainWindow" Height="800" Width="1200">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="grid_menu" Height="30" Background="{StaticResource Color_Background_Button_Blue}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <RadioButton Grid.Column="0" x:Name="Menu_Forside" Content="Tidtagning" IsChecked="False"  Style="{StaticResource Radio_Style_MenuOption}"/>
            <RadioButton Grid.Column="1" x:Name="Menu_Side2" Content="Søg på tider" IsChecked="True"  Style="{StaticResource Radio_Style_MenuOption}"/>
            <RadioButton Grid.Column="2" x:Name="Menu_Indstillinger" Content="Indstillinger" IsChecked="False" Style="{StaticResource Radio_Style_MenuOption}"/>
            <ToggleButton  Grid.Column="3" x:Name="Menu_Projektor" Checked="Menu_Projektor_Checked" Unchecked="Menu_Projektor_Checked" Content="Projektor" Style="{StaticResource ToggleButton_Styles_Default}"/>
        </Grid>

        <ScrollViewer Grid.Row="1" Padding="5">
            <StackPanel Visibility="Visible" Width="700" HorizontalAlignment="Center">

                <Button Content="hej" Click="Button_Click_1"></Button>

               
                <Grid Tag="{Binding ElementName=Menu_Forside, Path=IsChecked}" Opacity="0" Style="{StaticResource Grid_Style_FadeAnimation}">
                    <View:Forside x:Name="view_forside" NumbOfTables="9"/>
                </Grid>


                <Grid Tag="{Binding ElementName=Menu_Side2, Path=IsChecked}" Opacity="0" Style="{StaticResource Grid_Style_FadeAnimation}">
                    <View:sog_pa_tider/>
                </Grid>

                <Grid Tag="{Binding ElementName=Menu_Indstillinger, Path=IsChecked}" Opacity="0" Style="{StaticResource Grid_Style_FadeAnimation}">
                    <View:Connection x:Name="settings"/>
                </Grid>

                <!--<Grid Tag="{Binding ElementName=Menu_Side2, Path=IsChecked}" Style="{StaticResource Grid_Style_FadeAnimation}">
                    <View:sog_pa_tider HorizontalAlignment="Center"/>
                </Grid>-->

                <!--<Grid Tag="{Binding ElementName=Menu_Side2, Path=IsChecked}" Style="{StaticResource Grid_Style_FadeAnimation}">
					
					<TextBox Text="Søg på TIDER!!!" FontSize="50"/>
				</Grid>-->



            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
