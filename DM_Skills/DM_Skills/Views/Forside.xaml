
    <UserControl x:Class="DM_Skills.Views.Forside"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DM_Skills.Views"
            xmlns:Controls="clr-namespace:DM_Skills.Controls"
            xmlns:Models="clr-namespace:DM_Skills.Models"
             mc:Ignorable="d" x:Name="controller"
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.Resources>
        <Models:TableModel x:Key="table1" Location="Ballerup"/>
        <Models:TableModel x:Key="table2" Location="Ballerup"/>
        <Models:TableModel x:Key="table3" Location="Ballerup"/>
        <Models:TableModel x:Key="table4" Location="Ballerup"/>
        <Models:TableModel x:Key="table5" Location="Ballerup"/>
    </UserControl.Resources>


            <Grid HorizontalAlignment="Center" Margin="0 15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- Borderne -->
        <StackPanel Grid.Row="0" Grid.Column="0" x:Name="listOfTables"/>

        <!-- Indsend, nulstil og tid liste -->
                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Gør at vores indsend knap står i samme højde som TablesControl textboxes-->
                    <TextBlock Text="#" Foreground="Transparent" Grid.Row="0" FontSize="18" FontWeight="Bold" Margin="0 0 0 5"/>


                    <Button 
                    Grid.Row="1" 
                    Content="Indsend" 
                    Foreground="{StaticResource Color_Foreground_Light_1}" 
                    Background="{StaticResource Color_Background_Button_Blue}" 
                    FontSize="20" 
                    Height="50"
                    FontWeight="Bold" 
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource Button_Style_Default}"
                    Click="Button_Upload_Click"/>

                    <Button 
                    Grid.Row="2" 
                    Content="Nulstilling af runde" 
                    Padding="15 0" 
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Center"
                    Style="{StaticResource Button_Style_Default}"
                    Click="Button_Reset_Click"/>

                    <TextBlock  
                    Grid.Row="3" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Foreground="{StaticResource Color_Foreground_Dark_2}"
                    Margin="0 5">
                    #<Run Text="{Binding ElementName=controller, Path=Round}"/>
                    </TextBlock>
                    
                    
                    <Controls:DragAndDropTimerControl 
                        x:Name="LapList" 
                        CurrentTime="{Binding ElementName=stopwatch, Path=DisplayTime}"
                        Grid.Row="4" 
                        Height="250" 
                        VerticalAlignment="Bottom"/>
                </Grid>

                <!-- StopUr -->
                <Controls:TimerControl 
                x:Name="stopwatch" 
                Grid.Row="1" 
                Grid.ColumnSpan="3" 
                Margin="0 25 0 0" 
                Height="170" 
                OnLap="TimerControl_OnLap" 
                OnReset="TimerControl_OnReset"/>
            </Grid>
</UserControl>
