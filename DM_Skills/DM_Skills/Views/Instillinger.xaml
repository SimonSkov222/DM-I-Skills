<UserControl x:Class="DM_Skills.Views.Connection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DM_Skills.Views"
             xmlns:Controls="clr-namespace:DM_Skills.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Margin="0 15 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<Grid Grid.Row="1" Grid.Column="0" >
            <Controls:PlaceholderBox Placeholder="fff" />
            <TextBox Text="Password"  />
            <TextBox Text="Ip Adresse"/>
            <CheckBox Style="{StaticResource CheckBox_Style_Default}"/>
        </Grid>-->

        <Border BorderBrush="{StaticResource Color_Border_Box}" BorderThickness="1.5" Grid.Row="0" Grid.Column="0" 
                Background="{StaticResource Color_Background_Box}" Padding="15 10">
            <StackPanel >
                <Controls:PlaceholderBox Placeholder="Bruger navn" Grid.Row="0" Grid.Column="0" Margin="2 5"/>
                <Controls:PlaceholderBox Placeholder="Ip Adresse" Grid.Row="0" Grid.Column="1" Margin="2 5"/>
                <Controls:PlaceholderBox Placeholder="Password" Grid.Row="1" Grid.Column="0" Margin="2 5"/>
                <CheckBox Content="Database Status"  FontSize="16" IsChecked="False" IsEnabled="False" Margin="2 15 2 0" Grid.Row="1" Grid.Column="1"
                          Template="{StaticResource CheckBox_Tempalate_Status}" />
                
            </StackPanel>
        </Border>

        <Border BorderBrush="{StaticResource Color_Border_Box}" BorderThickness="1.5" Grid.Row="0" Grid.Column="2" 
                Background="{StaticResource Color_Background_Box}" Padding="15 10">
            <StackPanel >
                <Button Content="Test Connection" Style="{StaticResource Button_Style_Default}" 
                        Foreground="{StaticResource Color_Foreground_Light_1}" 
                        Background="{StaticResource Color_Background_Button_Blue}" 
                        FontWeight="Normal" 
                        HorizontalAlignment="Stretch"

                        FontSize="16"
                        Padding="0 4.5"/>
                <Button Content="Back up" Style="{StaticResource Button_Style_Default}" 
                        Foreground="{StaticResource Color_Foreground_Light_1}" 
                        Background="{StaticResource Color_Background_Button_Blue}" 
                        FontWeight="Normal" 
                        HorizontalAlignment="Stretch"

                        FontSize="16"
                        Padding="0 4.5"/>
                <Button Content="Import" Style="{StaticResource Button_Style_Default}" 
                        Foreground="{StaticResource Color_Foreground_Light_1}" 
                        Background="{StaticResource Color_Background_Button_Blue}" 
                        FontWeight="Normal" 
                        HorizontalAlignment="Stretch"

                        FontSize="16"
                        Padding="0 4.5"/>
                <Button Content="Export" Style="{StaticResource Button_Style_Default}" 
                        Foreground="{StaticResource Color_Foreground_Light_1}" 
                        Background="{StaticResource Color_Background_Button_Blue}" 
                        FontWeight="Normal" 
                        HorizontalAlignment="Stretch"

                        FontSize="16"
                        Padding="0 4.5"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="{StaticResource Color_Border_Box}" BorderThickness="1.5" Grid.Row="2" Grid.ColumnSpan="3" Margin="0 30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Row="0" Grid.Column="0" >
                    <ComboBoxItem IsSelected="True">Ballerup</ComboBoxItem>
                    <ComboBoxItem>Hvidovre</ComboBoxItem>
                    <ComboBoxItem>Frederiksberg</ComboBoxItem>
                </ComboBox>
                <!--<Controls:PlaceholderBox Placeholder="Hvor mange borde" Grid.Row="0" Grid.Column="1"></Controls:PlaceholderBox>-->
                <Controls:PlaceholderBox Placeholder="Hvor lang tid?" Grid.Row="0" Grid.Column="2"></Controls:PlaceholderBox>
                <Slider Style="{StaticResource Slider_Style_Default}"  Grid.Row="0" Grid.Column="1"/>

            </Grid>
        </Border>



    </Grid>
</UserControl>
