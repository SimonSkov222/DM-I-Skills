<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Converters="clr-namespace:DM_Skills.Converters"
                    xmlns:local="clr-namespace:DM_Skills.Includes">

    <Converters:ProcentOfValueConverter x:Key="ProcentOfValueConvert"/>
    <Converters:TimeSpanToStringConverter x:Key="TimeToStringConvert"/>
    <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConvert" TrueValue="Visible" FalseValue="Collapsed"/>
    <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityHiddenConvert" TrueValue="Visible" FalseValue="Hidden"/>
    <Converters:ValueToThicknessConverter x:Key="ValueToThicknessConvert"/>
    <Converters:AutocompleteItemConverter x:Key="AutocompleteItemConvert"/>
    <Converters:ThicknessToDoubleConverter x:Key="ThicknessToDoubleReverseConvert" Reverse="True"/>
    <Converters:CompareValuesBoolConverter x:Key="CompareValuesToBoolConvert" TrueValue="True" FalseValue="False" />
    <Converters:AutocompleteConverter x:Key="AutocompleteConvert"/>
    <Converters:PersonListConverter x:Key="PersonListConvert"/>
    <Converters:BoolToBrushConverter x:Key="PersonListBackground" TrueValue="{StaticResource Color_Background_InputBox}" FalseValue="{StaticResource Color_Background_Placeholder}"/>
    <Converters:BoolToBrushConverter x:Key="PersonListForeground" TrueValue="{StaticResource Color_Foreground_Dark_2}" FalseValue="{StaticResource Color_Foreground_Placeholder}"/>
</ResourceDictionary> 