<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CheckBox_Style_Default" TargetType="CheckBox">
        <Setter Property="Content" Value=""/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="BorderBrush" Value="{StaticResource Color_Border_InputBox}"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource Color_Foreground_Program}"/>
        <Setter Property="Template" Value="{StaticResource CheckBox_Template_Default}"/>
        <Setter Property="FontWeight" Value="Bold"/>

        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource Color_Background_Button_Blue}"/>
                <Setter Property="Background" Value="{StaticResource Color_Background_Button_Blue}"/>
                <Setter Property="Foreground" Value="{StaticResource Color_Foreground_Light_1}"/>
                <Setter Property="BorderThickness" Value="0"/>

            </Trigger>
            <Trigger Property="CheckBox.IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Color_Border_InputBox}"/>
                

            </Trigger>
        </Style.Triggers>

    </Style>
    
</ResourceDictionary>