<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DM_Skills.Styles"
                    xmlns:Controls="clr-namespace:DM_Skills.Controls">

	<Style TargetType="{x:Type Controls:Autocomplete}">

		<Setter Property="FontSize" Value="16"/>
		<Setter Property="MaxHeight" Value="150"/>
		<Setter Property="Foreground" Value="#000000"/>
		<Setter Property="Background" Value="#ffffff"/>
		<Setter Property="BorderThickness" Value="1,0,1,1"/>
		<Setter Property="BorderRadius" Value="0 0 0 0"/>
		<Setter Property="BorderBrush" Value="#000000"/>
		<Setter Property="Margin" Value="5"/>
		<Setter Property="Panel.ZIndex" Value="1000"/>
		<Setter Property="Template" Value="{StaticResource Autocomplete_Template_Default}"/>

	</Style>
</ResourceDictionary>